{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react", 
        "@babel/preset-env",
        "@babel/preset-react"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/jsx-filename-extension": ["warn", { "extensions": [".jsx", ".js"] }],
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "no-console": ["error"],
      "react/prop-types": "off"
    }
}
